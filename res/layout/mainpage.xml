<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    android:orientation="vertical" >

    <Button
        android:id="@+id/sendemail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/glossy"
        android:text="Send Pictures to doctor."
        android:textColor="@android:color/white" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:text="Please start your scheduled eye test."
        android:textSize="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/startTest"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/glossy"
        android:text="Start Test"
        android:textColor="@android:color/white"
        android:textSize="17dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Or take a Demo Tour to get familier"
        android:textSize="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="with the test and its instructions"
        android:textSize="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15dp" />

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Version 1.0" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>